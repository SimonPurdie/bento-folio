---
import Layout from '../layouts/Layout.astro';
import BentoCard from '../components/BentoCard.astro';
import { personalInfo, projects, tools } from '../data/projects';
---

<Layout title="Simon Purdie | Data Analyst Portfolio">
  <main class="w-full">
    
    <!-- Main Grid Container: More organic flow, less rigid rows -->
    <div class="grid grid-cols-1 md:grid-cols-4 gap-4 md:gap-6 auto-rows-min">
      
      <!-- HERO CARD: Peach, Top Left (Cols 1-2, Rows 1-2) -->
      <BentoCard class="md:col-span-2 md:row-span-2 bg-astro-peach flex flex-col justify-center min-h-[300px] rounded-tl-[4rem] rounded-br-[4rem]">
        <div class="flex flex-col justify-center h-full p-2">
          <div class="text-sm font-bold text-stone-600 mb-2 uppercase tracking-wide opacity-70">Portfolio</div>
          <h1 class="text-5xl md:text-6xl font-bold text-stone-800 mb-4 whitespace-pre-line leading-none tracking-tight">
            {personalInfo.name}
          </h1>
          <p class="text-xl md:text-2xl text-stone-700 font-medium mb-6 text-balance leading-snug">
            {personalInfo.title}
          </p>
          <div class="flex items-center gap-3">
             <span class="inline-block px-4 py-2 bg-white/40 rounded-full text-stone-700 font-semibold text-sm backdrop-blur-sm border border-white/20">
                Data Storytelling
             </span>
             <span class="inline-block px-4 py-2 bg-white/40 rounded-full text-stone-700 font-semibold text-sm backdrop-blur-sm border border-white/20">
                Agentic AI
             </span>
          </div>
        </div>
      </BentoCard>

      <!-- SOCIALS: Mustard (Col 3, Row 1) -->
      <BentoCard class="md:col-span-1 md:row-span-1 bg-astro-mustard flex flex-col justify-center items-center text-center rounded-3xl">
        <div class="flex flex-col gap-3 w-full">
          {personalInfo.socials.map((social) => (
             <a href={social.url} class="text-stone-800 font-bold text-lg hover:text-white transition-colors flex items-center justify-center gap-2 px-4 py-2 bg-white/20 rounded-full hover:bg-white/40">
               {social.name} <span>&nearr;</span>
             </a>
          ))}
        </div>
      </BentoCard>

      <!-- TECH STACK: Sky Blue (Col 4, Rows 1-2) -->
      <BentoCard class="md:col-span-1 md:row-span-2 bg-astro-sky flex flex-col shape-pill-vertical">
        <h3 class="font-bold text-stone-700 mb-4 text-center">Toolkit</h3>
        <div class="flex flex-wrap justify-center gap-2">
          {tools.map(t => (
            <span class="px-3 py-1.5 bg-white/50 rounded-full text-xs font-bold text-stone-600 border border-white/30 truncate max-w-full">
              {t.name}
            </span>
          ))}
        </div>
      </BentoCard>

      <!-- ABOUT ME: Mint (Col 3, Rows 2-3) -->
      <BentoCard class="md:col-span-1 md:row-span-2 bg-astro-mint text-stone-800 shape-leaf-bl">
        <h3 class="text-xl font-bold mb-4 text-stone-700">About</h3>
        <p class="text-stone-700 leading-relaxed text-sm font-medium">
          {personalInfo.about}
        </p>
        <div class="mt-auto pt-6 flex justify-end">
           <div class="text-5xl opacity-80">üëã</div>
        </div>
      </BentoCard>

      <!-- PROJECT: VS Code (Stone/Gray) (Col 1-2, Row 3) -->
      <BentoCard 
        href={projects[0].link}
        class="md:col-span-2 md:row-span-1 bg-brand-stone group relative overflow-hidden rounded-tl-[2rem] rounded-br-[2rem]"
      >
          <div class="flex flex-col justify-between h-full relative z-10">
            <div class="flex justify-between items-start">
               {projects[0].tags.slice(0,3).map(tag => (
                  <span class="text-[10px] uppercase tracking-wider font-bold opacity-60 bg-white/30 px-2 py-1 rounded-sm">
                    {tag}
                  </span>
               ))}
            </div>
            <div>
               <h3 class="text-3xl font-bold text-stone-800 mb-1 group-hover:translate-x-1 transition-transform">{projects[0].title}</h3>
               <p class="text-stone-600 text-sm max-w-md">{projects[0].description}</p>
            </div>
            <div class="absolute bottom-2 right-2 text-4xl opacity-20 pointer-events-none group-hover:opacity-40 transition-opacity">üìä</div>
         </div>
      </BentoCard>

      <!-- PROJECT: WorkHunter (Clay/TerraCotta) (Col 4, Row 3) -->
       <BentoCard 
         href={projects[1].link}
         class="md:col-span-1 md:row-span-1 bg-astro-clay group relative rounded-tr-[3rem] rounded-bl-[3rem]"
       >
          <div class="flex flex-col h-full text-white">
             <h3 class="text-xl font-bold mb-2">{projects[1].title}</h3>
             <p class="text-white/80 text-xs leading-relaxed">{projects[1].description}</p>
             <div class="mt-auto self-end text-2xl">üèπ</div>
          </div>
      </BentoCard>

      <!-- PROJECT: Miyori (Lavender) (Col 1, Row 4) -->
      <BentoCard 
        href={projects[2].link}
        class="md:col-span-1 md:row-span-1 bg-astro-lavender group relative overflow-hidden rounded-3xl"
      >
         <div class="flex flex-col h-full relative z-10">
            <h3 class="text-xl font-bold text-stone-800 mb-1">{projects[2].title}</h3>
            <p class="text-stone-600 text-[10px] leading-tight">{projects[2].description.slice(0, 100)}...</p>
            <div class="mt-auto flex justify-between items-end">
               <span class="text-[9px] uppercase font-bold opacity-50">Agentic AI</span>
               <div class="text-xl">üß†</div>
            </div>
         </div>
      </BentoCard>

      <!-- PROJECT: Understanding Semantic Analysis (Sage) (Col 2-3, Row 4) -->
      <BentoCard 
        href={projects[4].link}
        class="md:col-span-2 md:row-span-1 bg-brand-sage group relative overflow-hidden rounded-tr-[2rem] rounded-bl-[2rem]"
      >
          <div class="flex flex-col justify-between h-full relative z-10">
             <div class="flex justify-between items-start">
                <span class="text-[10px] uppercase tracking-wider font-bold opacity-70 bg-white/20 px-2 py-1 rounded-sm">NLP Project</span>
                <span class="text-xs font-bold text-stone-800 opacity-0 group-hover:opacity-100 transition-opacity">View on GitHub ‚Üó</span>
             </div>
             <div>
                <h3 class="text-2xl font-bold text-stone-800 mb-1">{projects[4].title}</h3>
                <p class="text-stone-700 text-xs max-w-sm">{projects[4].description}</p>
             </div>
          </div>
      </BentoCard>

      <!-- PROJECT: IT Systems Leadership (White) (Col 4, Row 4) -->
      <BentoCard class="md:col-span-1 md:row-span-1 bg-white group relative rounded-3xl border border-stone-200 shadow-sm">
          <div class="flex flex-col h-full">
             <h3 class="text-lg font-bold text-stone-700 mb-1">{projects[3].title}</h3>
             <p class="text-stone-500 text-[10px] leading-snug">{projects[3].description}</p>
             <div class="mt-auto self-end text-xl">‚öñÔ∏è</div>
          </div>
      </BentoCard>
      
    </div>
  </main>
</Layout>
